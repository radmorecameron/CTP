@model CodeTestingPlatform.DatabaseEntities.Local.MethodSignature

@{
    ViewData["Title"] = "Delete";
}

@if (Model.TestCases.Count() != 0) {
    <div class="alert alert-warning mt-3" role="alert">
        <h4 class="alert-heading">Warning!</h4>
        <p class="mb-0">This method signature has @Model.TestCases.Count() test case(s).</p>
        <hr>
        <p>If you delete this method signature, its associated test cases will also be deleted.</p>
    </div>
}
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Method Signature</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MethodName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MethodName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Activity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Activity.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="SignatureId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Edit" asp-controller="MethodSignature" asp-route-id="@Model.SignatureId">Cancel</a>
    </form>
</div>
