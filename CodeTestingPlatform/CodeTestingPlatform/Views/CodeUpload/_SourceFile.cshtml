@model SourceFile

<form asp-action="SourceFile" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input name="activityId" type="hidden" value="@Model.ActivityId"/>
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-6 mb-2">
            <div class="input-group">
                <input class="form-control" asp-for="FileUpload" value="Upload" />
            </div>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-6">
            <div class="row justify-content-end">
                <input type="submit" value="Upload File" class="btn btn-primary" />
                <p><span asp-validation-for="FileUpload" class="text-danger"></span></p>
            </div>
        </div>
    </div>
    
</form>
