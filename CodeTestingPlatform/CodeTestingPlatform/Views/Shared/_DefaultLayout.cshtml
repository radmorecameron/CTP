    <link rel="stylesheet" href="~/css/layout/main.css">
    <link rel="stylesheet" href="~/css/layout/nav.css">
    <link rel="icon" type="image/png" href="~/images/heritage-logo-v2.png" />
    <link rel="stylesheet" href="~/css/shared/site.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs5/jszip-2.5.0/dt-1.11.5/b-2.2.2/b-html5-2.2.2/b-print-2.2.2/kt-2.6.4/datatables.min.css" />    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@fortawesome/fontawesome-free@5.15.4/css/fontawesome.min.css" integrity="sha384-jLKHWM3JRmfMU0A5x5AkjWkw/EYfGUAGagvnfryNV3F9VqM98XiIH7VBGVoxVSc7" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="container-fluid container-fluid-df">
            <div class="container-fluid-df">
                <div class="row content">
                    <div id="topbar" class="col-sm-12 col-sm-12-topbar">
                        <ul id="top-menu">
                            <li class="top-menu">
                                <a class="dark" asp-action="Index" asp-area="" asp-controller="Home">Home</a>
                            </li>

                            @* Need to confirm if we will be using a Activity only page or not *@
                            @*Teacher tabs*@
                            @*@if (_cs.IsUserATeacher())
                                {
                                    <li class="top-menu">
                                        <a class="dark" asp-controller="Activity" asp-action="Index">Activities</a>
                                    </li>
                                }*@

                            @*Student tabs*@
                            @*@if (_cs.IsUserAStudent()) {
                                    <li class="top-menu">
                                        <a class="dark" asp-controller="Student" asp-action="Index">Courses</a>
                                    </li>
                                }*@


                            @*General tabs*@
                            <li class="top-menu">
                                <a class="dark" asp-controller="Home" asp-action="About">About</a>
                            </li>
                            <li class="top-menu">
                                <a class="dark" asp-controller="Home" asp-action="Help">Help</a>
                            </li>
                            <li class="top-menu">
                                <a class="dark" asp-controller="Home" asp-action="ReleaseNotes">Release Notes</a>
                            </li>

                            @if (_cs.IsAuthorized()) {
                                <li class="top-menu">
                                    <a class="dark" asp-controller="Login" asp-action="Logout">Log out</a>
                                </li>
                            } else {
                                <li class="top-menu top-menu-last">
                                    <a class="dark" asp-controller="Login" asp-action="Index">Login</a>
                                </li>
                            }

                        </ul>
                    </div>
                </div>
            </div>
        </nav>
        <div class="row row-banner content-banner">
            <div class="col-lg-2 col-md-2 col-sm-12 banner-left">
                <img src="~/images/heritage-logo.png" class="img-fluid mx-auto" id="top-banner-logo-area" alt="Cégep Heritage Logo">
                <h2 class="small-screen-branding">Code Testing Platform</h2>
            </div>
            <div class="col-10 banner-right">
                <img src="~/images/banner-right-1.png" class="d-inline" alt="logo">
                <h1 class="d-inline display-4 branding">Code Testing Platform</h1>
                <img src="~/images/vector-anglophone-banner.png" class="float-end left-banner-small" alt="floating banner">
            </div>
        </div>
        @*<div class="row row-banner content content-banner">
                <div class="col-sm-3 banner-left" id="heritage-logo-bar">
                    <img src="~/images/heritage-logo.png" class="img-responsive" alt="Cégep Heritage Logo">
                </div>
                <div class="col-sm-9 banner-right">
                    <img src="~/images/banner-right-1.png" alt="logo">
                    Floating right-hand image -->
                    <img src="~/images/floating-banner-accounting.png" class=" banner-image" alt="floating banner"> -->
                    <img src="~/images/vector-anglophone-banner.png" class=" banner-image" alt="floating banner">
                </div>
            </div>*@
    </header>
    <div class="container">
        <main role="main" class="bg-white p-3">
            @RenderBody()
        </main>
    </div>

